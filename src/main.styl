*
  border-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 20px
  background: #333
  color: #333

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

#app
  width: 100%
  height: 100%
  
  #canvas
    display: block
    margin: 0 auto
    max-width: 100%
    max-height: 100%
    background: #666
    touch-action: none  //Prevents IE/Edge from intrepreting touch input as scroll/pan commands.
    image-rendering: optimizeSpeed;  //Nearest neighbour interpolation fix; allows upscaling of pixelated sprites.
    image-rendering: -moz-crisp-edges;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: optimize-contrast;
    -ms-interpolation-mode: nearest-neighbor;
    image-rendering: pixelated;
  
  #console
    position: fixed
    left: 0
    bottom: 0
    width: 100%
    opacity: 0.5
    background: #fff
    padding: 0.5em
